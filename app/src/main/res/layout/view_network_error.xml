<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/im"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_105"
        android:scaleType="fitCenter"
        android:src="@drawable/img_error"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center"
        android:text="加载失败，点击重试！"
        android:textColor="#45574d"
        android:textSize="@dimen/sp_13"
        app:layout_constraintLeft_toLeftOf="@+id/im"
        app:layout_constraintRight_toRightOf="@+id/im"
        app:layout_constraintTop_toBottomOf="@+id/im" />

</android.support.constraint.ConstraintLayout>