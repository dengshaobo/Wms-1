<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10"
    android:padding="@dimen/dp_10">

    <TextView
        android:textColor="@color/colorBlack"
        android:id="@+id/in_code_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="入库编码："
        android:textSize="@dimen/sp_15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:textColor="@color/colorBlack"
        android:id="@+id/in_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="无"
        app:layout_constraintBottom_toBottomOf="@+id/in_code_title"
        app:layout_constraintLeft_toRightOf="@+id/in_code_title"
        app:layout_constraintTop_toTopOf="@+id/in_code_title" />

    <TextView
        android:textColor="@color/colorBlack"
        android:id="@+id/main_order_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="主  单  号："
        android:textSize="@dimen/sp_15"
        app:layout_constraintTop_toBottomOf="@+id/in_code_title" />


    <TextView
        android:textColor="@color/colorBlack"
        android:id="@+id/main_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="无"
        app:layout_constraintBottom_toBottomOf="@+id/main_order_title"
        app:layout_constraintLeft_toRightOf="@+id/main_order_title"
        app:layout_constraintTop_toTopOf="@+id/main_order_title" />


    <TextView
        android:textColor="@color/colorBlack"
        android:id="@+id/scan_user_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="扫描人员："
        android:textSize="@dimen/sp_15"
        app:layout_constraintTop_toBottomOf="@+id/main_order_title" />

    <TextView
        android:textColor="@color/colorBlack"
        android:id="@+id/scan_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="无"
        app:layout_constraintBottom_toBottomOf="@+id/scan_user_title"
        app:layout_constraintLeft_toRightOf="@+id/scan_user_title"
        app:layout_constraintTop_toTopOf="@+id/scan_user_title" />

</android.support.constraint.ConstraintLayout>